<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auth_name"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="dr hab. inż. Ryszard Sroka"
        android:textAlignment="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:background="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auth_role"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        android:text="Dziekan Wydziału"
        android:textAlignment="center"
        android:layout_marginBottom="10sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/auth_photo"
        android:visibility="gone"
        android:elevation="2sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/auth_phone"
            android:background="@drawable/call_ic"
            android:layout_margin="10sp"
            android:layout_marginBottom="-5sp"/>

        <Button
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/auth_mail"
            android:background="@drawable/email_ic"
            android:layout_margin="10sp"
            android:layout_marginBottom="-5sp"/>

    </LinearLayout>

</LinearLayout>