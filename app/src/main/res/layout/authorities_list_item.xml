<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/authorities_item"
    android:padding="5sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Małgorzata Frączek"
        android:id="@+id/authority_name"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mikroelektronika w Technice i Medycynie"
        android:textSize="12sp"
        android:singleLine="true"
        android:id="@+id/authority_role"
        android:layout_below="@id/authority_name"
        android:textColor="#2F4F4F"
        android:layout_marginTop="-3sp"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
